const form = document.getElementById('bookingForm');
if(form){
  form.addEventListener('submit', function(e){
    // let the form submit normally to Formspree; show a quick UI hint
    const btn = form.querySelector('button');
    btn.textContent = "Sending...";
    btn.disabled = true;
    setTimeout(()=>{ btn.textContent = "Request Booking"; btn.disabled = false; }, 4000);
  });
